<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand p-3" href="/">Bookers</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
        <% if user_signed_in? %>
          <li class="nav-list pr-3">
           <span class="text-white"><i class="fas fa-home"></i></span><%=link_to"Home", user_path(current_user), class:"text-light" %>
           </li>
          <li class="nav-list pr-3">
            <span class="text-light"><i class="fas fa-users"></i></span><%= link_to "Users", users_path, class:"text-light" %>
          </li>
          <li class="nav-list pr-3">
           <span class="text-light"><i class="fas fa-book-open"></i></span><%= link_to "Books", books_path, class:"text-light" %>
         </li>
          <li class="nav-list pr-3">
           <span class="text-light"><i class="fas fa-sign-out-alt"></i></span><%= link_to "logout",  destroy_user_session_path, method: :delete, class:"text-light" %>
         </li>
    
     <% else %>
        <li class="nav-list pr-3">
          <a class="text-white" href="/"><span class="text-white"><i class="fas fa-home"></i></span>Home</a>
        </li>
        <li  class="nav-list pr-3">
          <span class="text-light"><i class="fas fa-link"></i></span><%= link_to "About", about_path, class:"text-light" %>
          </li>
        <li  class="nav-list pr-3">
          <span class="text-light"><i class="fas fa-user-plus"></i></span><%= link_to "sign up", new_user_registration_path, class:"text-light" %>
        </li>
         <li>
          <span class="text-light"><i class="fas fa-sign-in-alt"></i></span><%= link_to "log in", new_user_session_path, class:"text-light" %>
        </li>
          <% end %>
          
        </ul>  
      </div>
      </nav>
    </header>
    
    <main>
       <p class="notice text-success"><%= notice %></p>
       <p class="alert text-danger"><%= alert %></p>
       
    <%= yield %>
    </main>
    
    <footer>
      <p class="text-center mt-5">CopyRight Infratop.inc</p>
    </footer>
  </body>
  
</html>
