<p> <%= render "layouts/error", book: @book %></p>

<div class="container px-5 px-sm-0">
    <div class="row">
        <div class="col-md-3">
            <%= render "users/infomation", user: current_user %>
           
                <%= render "books/form", book: @book %> 
           
        </div>
        
        <div class="col-md-8 offset-md-1">
            <h2 class="border-bottom">Books</h2>

           <table class="w-100 table-hover table-inverse">
             <thead class="border-bottom">
                 <tr>
                   <th></th>
                   <th>Title</th>
                   <th>Opinion</th>
                   <th colspan="3"></th>
                 </tr>
             </thead>
  
             <tbody>
               <tr>
                <% @books.each do |book| %>
                <td class="border-bottom"><%= link_to user_path(book.user) do %><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %><% end %></td>
                <td class="border-bottom"><%= link_to book_path(book.id) do %><%= book.title %><% end %></td>
                <td class="border-bottom"><%= book.opinion %></td>
              </tr>
               <% end %>
            </tbody>
            
           </table>
           <%= paginate @books %>
        </div>
    </div>
</div>