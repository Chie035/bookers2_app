<h2>User info</h2>

  <%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %>
  
  <table class="table">
    <tbody>
        <tr></tr>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
    </tbody>
  </table>
  
  <div class="border text-center">
    <% if user.id == current_user.id %>
    <%= link_to edit_user_path(user) do %><span class="text-secondary btn-block"><i class="fas fa-user-cog"></i></span><% end %>
    
    <% else %>
    <%= link_to user_path(current_user) do %><span class="text-secondary btn-block"><i class="fas fa-user-cog"></i></span><% end %>
    <% end %>
    
    
  </div>
