<div class="container px-5 px-sm-0">
    
  <div class="row">
    
      <div class="col-md-3">  
        <%= render "users/infomation", user: @user %>
         <%= render "books/form", book: @book1 %>
      </div>
 
      <div class="col-md-8 offset-md-1">
        <h1>Books</h1>
        <table class="table table-hover table-inverse">
             <thead>
               <th></th>
               <th>Title</th>
               <th>Opinion</th>
               <th colspan="3"></th>
              </thead>
  
               <tbody>
                 <tr>
                  <% @books.each do |book| %>
                  <td><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", size: "60x60" %></td>
                  <td><%= link_to book_path(book.id) do %><%= book.title %><% end %></td>
                  <td><%= book.opinion %></td>
                </tr>
                <% end %>
               </tbody>
             </table>
           
       
           
       </div>
  </div>


</div>