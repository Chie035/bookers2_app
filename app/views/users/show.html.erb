<div class="container">
    
  <div class="row">
    
      <div class="col-lg-3">  
      <% if @book1.errors.any? %>
         <% @book1.errors.full_messages.each do |message| %>
         <%= message %>
         <% end %>
       <% end %>
        <%= render "users/infomation", user: @user %>
      </div>
 
      <div class="col-md-8 offset-1">
        <h1 class="border-bottom">Books</h1>
        <table class="w-100 table-hover table-inverse">
             <thead class="border-bottom">
               <th></th>
               <th>Title</th>
               <th>Opinion</th>
               <th colspan="3"></th>
              </thead>
  
               <tbody>
                 <tr>
                  <% @books.each do |book| %>
                  <td class="border-bottom"><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></td>
                  <td class="border-bottom"><%= link_to book_path(@book.id) do %><%= book.title %><% end %></td>
                  <td class="border-bottom"><%= book.opinion %></td>
                </tr>
                <% end %>
               </tbody>
             </table>
           
           <%= paginate @books %>
           
       </div>
  </div>

     <div class="row">
      <%= render "books/form", book: @book1 %>
      </div>

</div>