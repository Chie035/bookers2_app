<div class="container">
    <div class="row">
        
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h1>User info</h1>
        <%= form_with model: @user, local:true do |f| %>
        <div class="form-group">
        <label for ="user_name">Name</label>
        <%= f.text_field :name, autofocus: true, class:"form-control", id:"user_name", placeholder: "名前" %>
        </div>
        <div class="form-group">
        <label for ="user_image">Image</label>
        <%= f.attachment_field :profile_image %>
        </div>
        <div class="form-group">
        <label for ="user_introduction">Introduction</label>
        <%= f.text_area :introduction, autofocus: true, class:"form-control", id:"user_introduction" %>
        </div>
        <div class="form-group">
        <%= f.submit "Update user", class:"btn btn-secondary text-light mt-3" %>
        </div>
        <% end %>
        </div>
        
    </div>
</div>