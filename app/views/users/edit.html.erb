<div class="container">
    <div class="row mx-auto">
        
        <div class="col-lg-4 mx-auto">
        <h1>User info</h1>
        <%= form_with model: @user, local:true do |f| %>
        <label for ="inputName" class="d-block">Name</label>
        <%= f.text_field :name, autofocus: true, id:"inputName", placeholder: "名前" %>
        <label for ="inputImage" class="d-block">Image</label>
        <%= f.attachment_field :profile_image %>
        <%= f.submit "Update user", class:"btn btn-secondary text-light d-block mt-3" %>
        <% end %>
        </div>
        
    </div>
</div>