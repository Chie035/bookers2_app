<div class="container">
    <div class="row">
        
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h1>User info</h1>
        
        <% if @user.errors.any? %>
          <div class="text-danger">
          <h4><%=@user.errors.count%>errors prohibited this obj from being saved:</h4>
          <% @user.errors.full_messages.each do |message| %>
          <%= message %>
          <% end %>
         </div>
       <% end %>
     
        
        <%= form_with model: @user, local:true do |f| %>
        <div class="form-group">
        <label for ="user_name">Name</label>
        <%= f.text_field :name, autofocus: true, class:"form-control", id:"user_name", placeholder: "名前" %>
        </div>
        <div class="form-group">
        <label for ="user_image">Image</label>
        <%= f.attachment_field :profile_image %>
        </div>
        <div class="form-group">
        <label for ="user_introduction">Introduction</label>
        <%= f.text_area :introduction, autofocus: true, class:"form-control" %>
        </div>
        <div class="form-group">
        <%= f.submit "Update User", class:"btn btn-secondary text-light mt-3" %>
        </div>
        <% end %>
        </div>
        
    </div>
</div>