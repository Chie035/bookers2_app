<div class="container">
<div class="row">
    
 <div class="col-lg-3">
     <%= render "users/infomation", user: @user %>
 </div>  

  <div class="col-lg-9">
       
   <h1>Users index</h1>
   <table>
  <thead>
   <th>image</th>
   <th>name</th>
   <th colspan="3"></th>
  </thead>
  
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= attachment_image_tag @user, :profile_image, :fill, 20, 20, fallback: "no_image.jpg" %></td>
      <td><%= user.name %></td>
      <td><%= link_to "show", user_path(user.id) %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @users %>

</div>
</div>

<div class="row">
    <div class="col-lg-3">
        <%= render "books/form", book: @book %>
    </div>
</div>
</div>