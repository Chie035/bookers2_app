<div class="container">
        <div class="row">
    
 <div class="col-lg-3">
     <% if @book.errors.any? %>
         <% @book.errors.full_messages.each do |message| %>
         <%= message %>
         <% end %>
       <% end %>
     <%= render "users/infomation", user: @user %>
     
 </div>  
 

  <div class="col-md-8 offset-1">
       
   <h1 class="border-bottom">Users</h1>
   <table class="w-100 table-hover table-inverse">
  <thead class="border-bottom">
   <th scope="col-10">image</th>
   <th scope="col-3">name</th>
   <th colspan="3"></th>
  </thead>
  
  <tbody>
    <% @users.each do |user| %>
    <tr>
    
      <th class="border-bottom" scope="row"><%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></th>
      <td class="border-bottom"><%= user.name %></td>
      <td class="border-bottom"><%= link_to "show", user_path(user.id) %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @users %>

</div>
</div>

    <div class="col-lg-3">
        <%= render "books/form", book: @book %>
    </div>
</div>